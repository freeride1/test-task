upstream backend {
{% for host in groups ['backend'] %}
	server {{ host }}:8081;
{% endfor %}
}
server {
listen *:80; ## listen for ipv4
server_name {{ domain }};
access_log /var/log/nginx/access.log;

location / {
proxy_pass http://backend/;
proxy_connect_timeout 120;
proxy_send_timeout 120;
proxy_read_timeout 180;
}
